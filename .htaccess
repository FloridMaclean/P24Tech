# Hostinger Node.js Configuration
# This file helps route requests to your Next.js application

# Enable Rewrite Engine
<IfModule mod_rewrite.c>
  RewriteEngine On
  
  # Redirect to HTTPS (if SSL is enabled)
  # RewriteCond %{HTTPS} off
  # RewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]
  
  # CRITICAL: Allow Next.js static files to be served directly
  # This prevents 404 errors on chunk loading
  # Check if the file exists first, then allow it
  RewriteCond %{REQUEST_URI} ^/_next/static/
  RewriteCond %{REQUEST_FILENAME} -f
  RewriteRule ^ - [L]
  
  # Allow _next/image and other static assets
  RewriteCond %{REQUEST_URI} ^/_next/image [OR]
  RewriteCond %{REQUEST_URI} ^/favicon.ico [OR]
  RewriteCond %{REQUEST_URI} ^/robots.txt [OR]
  RewriteCond %{REQUEST_URI} ^/sitemap.xml [OR]
  RewriteCond %{REQUEST_URI} ^/manifest.json [OR]
  RewriteCond %{REQUEST_URI} ^/icon/
  RewriteRule ^ - [L]
  
  # If _next/static file doesn't exist, proxy to Node.js server
  # This handles cases where files are served by Next.js server
  RewriteCond %{REQUEST_URI} ^/_next/
  RewriteRule ^ - [L]
  
  # Proxy requests to Node.js server (if using reverse proxy)
  # Uncomment if Hostinger requires reverse proxy setup
  # RewriteCond %{REQUEST_FILENAME} !-f
  # RewriteCond %{REQUEST_FILENAME} !-d
  # RewriteRule ^(.*)$ http://localhost:${PORT:-3000}/$1 [P,L]
</IfModule>

# Security Headers (some may be handled by Next.js)
<IfModule mod_headers.c>
  # Prevent clickjacking
  Header always set X-Frame-Options "SAMEORIGIN"
  
  # Prevent MIME type sniffing
  Header always set X-Content-Type-Options "nosniff"
  
  # XSS Protection
  Header always set X-XSS-Protection "1; mode=block"
  
  # Ensure JavaScript files are served with correct MIME type
  <FilesMatch "\.(js|mjs)$">
    Header set Content-Type "application/javascript; charset=utf-8"
  </FilesMatch>
  
  # Cache static chunks with proper headers
  <FilesMatch "^/_next/static/">
    Header set Cache-Control "public, max-age=31536000, immutable"
  </FilesMatch>
</IfModule>

# Compression
<IfModule mod_deflate.c>
  AddOutputFilterByType DEFLATE text/html text/plain text/xml text/css text/javascript application/javascript application/json
</IfModule>

# Cache static assets
<IfModule mod_expires.c>
  ExpiresActive On
  ExpiresByType image/jpg "access plus 1 year"
  ExpiresByType image/jpeg "access plus 1 year"
  ExpiresByType image/gif "access plus 1 year"
  ExpiresByType image/png "access plus 1 year"
  ExpiresByType image/svg+xml "access plus 1 year"
  ExpiresByType text/css "access plus 1 month"
  ExpiresByType application/javascript "access plus 1 month"
  ExpiresByType application/pdf "access plus 1 month"
  ExpiresByType text/x-javascript "access plus 1 month"
  ExpiresByType application/x-shockwave-flash "access plus 1 month"
  ExpiresByType image/x-icon "access plus 1 year"
  ExpiresDefault "access plus 2 days"
</IfModule>
